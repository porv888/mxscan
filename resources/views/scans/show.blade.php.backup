        </div>
    </div>
    @endif

    {{-- Actions --}}
    <div class="flex flex-wrap gap-3 mt-6">
        <a href="{{ route('dashboard.domains') }}" 
           class="px-4 py-2 bg-gray-100 rounded hover:bg-gray-200 text-sm">← Back to Domain Management</a>
        <button onclick="downloadReport()" 
           class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 text-sm">
           <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
               <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
           </svg>
           Download Report
        </button>
        <button onclick="shareReport()" 
           class="px-4 py-2 bg-green-600 text-white rounded hover:bg-green-700 text-sm">
           <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
               <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.367 2.684 3 3 0 00-5.367-2.684z"></path>
           </svg>
           Share Report
        </button>
    </div>

</div>

<script>
    // Initialize Lucide icons
    lucide.createIcons();

    function copyToClipboard(text, button) {
        navigator.clipboard.writeText(text).then(() => {
            // Show brief success feedback
            const originalText = button.innerText;
            const originalClasses = button.className;
            button.innerText = 'Copied!';
            button.className = 'px-3 py-1 bg-green-600 text-white rounded text-sm transition-colors';
            setTimeout(() => {
                button.innerText = originalText;
                button.className = originalClasses;
            }, 1500);
        }).catch(err => {
            console.error('Failed to copy text: ', err);
            button.innerText = 'Copy failed';
            setTimeout(() => {
                button.innerText = 'Copy Value';
            }, 1500);
        });
    }

    // Toggle score breakdown
    function toggleScoreBreakdown() {
        const breakdown = document.getElementById('score-breakdown');
        breakdown.classList.toggle('hidden');
    }

    // Toggle blacklist details
    function toggleBlacklistDetails() {
        const details = document.getElementById('blacklist-details');
        const button = event.target;
        
        details.classList.toggle('hidden');
        button.textContent = details.classList.contains('hidden') ? 'Show Details' : 'Hide Details';
    }

    // Download report function
    function downloadReport() {
        // Create a printable version
        const printContent = document.querySelector('.p-6').cloneNode(true);
        
        // Remove interactive elements
        printContent.querySelectorAll('button, form').forEach(el => el.remove());
        printContent.querySelectorAll('.hidden').forEach(el => el.classList.remove('hidden'));
        
        // Create new window for printing
        const printWindow = window.open('', '_blank');
        printWindow.document.write(`
            <html>
                <head>
                    <title>MXScan Report - {{ $scan->domain->domain }}</title>
                    <style>
                        body { font-family: Arial, sans-serif; margin: 20px; }
                        .bg-green-50 { background-color: #f0fdf4; }
                        .bg-red-50 { background-color: #fef2f2; }
                        .bg-blue-50 { background-color: #eff6ff; }
                        .text-green-800 { color: #166534; }
                        .text-red-800 { color: #991b1b; }
                        .text-blue-800 { color: #1e40af; }
                        .p-4 { padding: 1rem; }
                        .mb-4 { margin-bottom: 1rem; }
                        .rounded { border-radius: 0.375rem; }
                        .border { border: 1px solid #d1d5db; }
                        .font-bold { font-weight: bold; }
                        .text-sm { font-size: 0.875rem; }
                        code { background: #f3f4f6; padding: 2px 4px; border-radius: 3px; }
                    </style>
                </head>
                <body>
                    <h1>MXScan Report</h1>
                    <p><strong>Domain:</strong> {{ $scan->domain->domain }}</p>
                    <p><strong>Scan Date:</strong> {{ $scan->finished_at?->format('M j, Y \\a\\t g:i A') ?? $scan->created_at->format('M j, Y \\a\\t g:i A') }}</p>
                    <p><strong>Scan ID:</strong> {{ $scan->id }}</p>
                    <hr>
                    ${printContent.innerHTML}
                </body>
            </html>
        `);
        printWindow.document.close();
        printWindow.print();
    }

    // Share report function
    function shareReport() {
        if (navigator.share) {
            navigator.share({
                title: 'MXScan Report - {{ $scan->domain->domain }}',
                text: 'Email security scan results for {{ $scan->domain->domain }}',
                url: window.location.href
            });
        } else {
            // Fallback: copy URL to clipboard
            navigator.clipboard.writeText(window.location.href).then(() => {
                alert('Report URL copied to clipboard!');
            });
        }
    }

    // Handle blacklist form submission with error handling
    const blacklistForm = document.getElementById('blacklist-form');
    if (blacklistForm) {
        blacklistForm.addEventListener('submit', function(e) {
            e.preventDefault(); // Prevent default submission
            
            const button = document.getElementById('blacklist-btn');
            const buttonText = button.querySelector('span');
            const originalText = buttonText.textContent;
            
            // Disable button and show loading state
            button.disabled = true;
            buttonText.textContent = 'Running...';
            button.classList.add('opacity-75');
            
            // Get CSRF token from meta tag
            const csrfTokenMeta = document.querySelector('meta[name="csrf-token"]');
            if (!csrfTokenMeta) {
                alert('Security token not found. Please refresh the page and try again.');
                button.disabled = false;
                buttonText.textContent = originalText;
                button.classList.remove('opacity-75');
                return;
            }
            
            const csrfToken = csrfTokenMeta.getAttribute('content');
            
            // Prepare form data
            const formData = new FormData();
            formData.append('_token', csrfToken);
            formData.append('mode', 'blacklist');
            
            // Submit via fetch with proper error handling
            fetch(blacklistForm.action, {
                method: 'POST',
                body: formData,
                headers: {
                    'X-Requested-With': 'XMLHttpRequest',
                    'Accept': 'application/json',
                    'X-CSRF-TOKEN': csrfToken
                }
            })
            .then(response => {
                if (response.ok) {
                    // Parse JSON response
                    return response.json().then(data => {
                        if (data.success && data.redirect_url) {
                            // Redirect to the scan results page
                            window.location.href = data.redirect_url;
                        } else {
                            // Fallback: reload the page
                            window.location.reload();
                        }
                    }).catch(() => {
                        // If not JSON, handle as redirect
                        if (response.redirected) {
                            window.location.href = response.url;
                        } else {
                            window.location.reload();
                        }
                    });
                } else if (response.status === 419) {
                    // CSRF token expired - reload the page to get a fresh token
                    alert('Session expired. Refreshing page...');
                    window.location.reload();
                } else if (response.status === 429) {
                    // Too many requests
                    response.json().then(data => {
                        alert(data.error || 'Please wait before running another scan.');
                    }).catch(() => {
                        alert('Please wait before running another scan.');
                    }).finally(() => {
                        button.disabled = false;
                        buttonText.textContent = originalText;
                        button.classList.remove('opacity-75');
                    });
                } else if (response.status === 402) {
                    // Payment required (plan upgrade needed)
                    response.json().then(data => {
                        if (confirm(data.error + ' Would you like to upgrade now?')) {
                            window.location.href = data.upgrade_url || '/pricing';
                        }
                    }).catch(() => {
                        alert('Blacklist checks require a paid plan.');
                    }).finally(() => {
                        button.disabled = false;
                        buttonText.textContent = originalText;
                        button.classList.remove('opacity-75');
                    });
                } else {
                    // Other errors
                    response.json().then(data => {
                        alert(data.error || 'Scan failed. Please try again.');
                    }).catch(() => {
                        alert('Scan failed. Please try again.');
                    }).finally(() => {
                        button.disabled = false;
                        buttonText.textContent = originalText;
                        button.classList.remove('opacity-75');
                    });
                }
            })
            .catch(error => {
                console.error('Network error:', error);
                alert('Network error. Please check your connection and try again.');
                button.disabled = false;
                buttonText.textContent = originalText;
                button.classList.remove('opacity-75');
            });
        });
    }
</script>
@endsection
